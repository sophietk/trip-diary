{
  "name": "trip-diary",
  "version": "1.0.0",
  "description": "A web application to log your trips around the world",
  "scripts": {
    "build": "run-p build:*",
    "build:css": "node-sass --output-style compressed client/src/sass/main.scss > client/dist/assets/main.css",
    "build:js": "webpack -d",
    "watch": "npm-watch",
    "lint:js": "standard",
    "server:dev": "nodemon -w server server",
    "server:prod": "node server",
    "start": "run-p server:dev watch",
    "heroku": "run-s build server:prod"
  },
  "watch": {
    "build:css": {
      "patterns": [
        "client/src/sass"
      ],
      "extensions": "scss"
    },
    "build:js": {
      "patterns": [
        "client/src"
      ],
      "extensions": "js,jsx"
    },
    "lint:js": {
      "patterns": [
        "."
      ],
      "extensions": "js"
    }
  },
  "standard": {
    "globals": [
      "alert",
      "fetch",
      "FormData",
      "screen"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sophietk/trip-diary.git"
  },
  "keywords": [
    "trip",
    "diary",
    "logs",
    "world",
    "map",
    "journey",
    "voyage",
    "travel"
  ],
  "bugs": {
    "url": "https://github.com/sophietk/trip-diary/issues"
  },
  "homepage": "https://github.com/sophietk/trip-diary#readme",
  "devDependencies": {
    "npm-watch": "0.5.0",
    "standard": "^9.0.0"
  },
  "dependencies": {
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "8.0.4",
    "body-parser": "1.18.3",
    "bourbon-neat": "3.0.0",
    "compass-sass-mixins": "0.12.7",
    "country-data": "0.0.31",
    "datamaps": "0.5.9",
    "express": "4.16.4",
    "express-validation": "1.0.2",
    "joi": "14.3.0",
    "node-rest-client": "3.1.0",
    "node-sass": "4.11.0",
    "npm-run-all": "4.1.5",
    "numeral": "2.0.6",
    "react": "16.6.3",
    "react-dom": "16.6.3",
    "react-router": "4.3.1",
    "webpack": "4.27.1",
    "webpack-cli": "^3.1.2",
    "whatwg-fetch": "3.0.0"
  }
}
