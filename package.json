{
  "name": "trip-diary",
  "version": "1.0.0",
  "description": "A web application to log your trips around the world",
  "scripts": {
    "build": "run-p build:*",
    "build:css": "node-sass --output-style compressed client/src/sass/main.scss > client/dist/assets/main.css",
    "build:js": "webpack -d",
    "watch": "npm-watch",
    "lint:js": "standard",
    "server:dev": "nodemon -w server server",
    "server:prod": "node server",
    "start": "run-p server:dev watch",
    "heroku": "run-s build server:prod"
  },
  "watch": {
    "build:css": {
      "patterns": [
        "client/src/sass"
      ],
      "extensions": "scss"
    },
    "build:js": {
      "patterns": [
        "client/src"
      ],
      "extensions": "js,jsx"
    },
    "lint:js": {
      "patterns": [
        "."
      ],
      "extensions": "js"
    }
  },
  "standard": {
    "globals": [
      "alert",
      "fetch",
      "FormData",
      "screen"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sophietk/trip-diary.git"
  },
  "keywords": [
    "trip",
    "diary",
    "logs",
    "world",
    "map",
    "journey",
    "voyage",
    "travel"
  ],
  "bugs": {
    "url": "https://github.com/sophietk/trip-diary/issues"
  },
  "homepage": "https://github.com/sophietk/trip-diary#readme",
  "devDependencies": {
    "npm-watch": "0.1.8",
    "standard": "9.0.0"
  },
  "dependencies": {
    "babel-core": "6.23.1",
    "babel-loader": "6.3.2",
    "babel-preset-es2015": "6.22.0",
    "babel-preset-react": "6.23.0",
    "body-parser": "1.16.1",
    "bourbon-neat": "2.0.0",
    "compass-sass-mixins": "0.12.7",
    "country-data": "0.0.31",
    "datamaps": "0.5.8",
    "express": "4.14.1",
    "express-validation": "1.0.1",
    "joi": "10.2.2",
    "node-rest-client": "3.0.3",
    "node-sass": "4.5.0",
    "npm-run-all": "4.0.2",
    "react": "15.4.2",
    "react-dom": "15.4.2",
    "react-router": "3.0.2",
    "webpack": "2.2.1",
    "whatwg-fetch": "2.0.3"
  }
}
